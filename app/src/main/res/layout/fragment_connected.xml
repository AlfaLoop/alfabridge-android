<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/myPrimaryBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/myPrimaryBackground"
        android:id="@+id/main_container"
        android:orientation="vertical">
        <include
            android:id="@+id/device_connected"
            layout="@layout/card_device_connected"
            android:visibility="gone"/>
        <include
            android:id="@+id/view_progress"
            layout="@layout/card_lunchr_progress"
            android:visibility="gone"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:background="@color/myPrimaryWhite"
            app:tabIndicatorColor="@color/myPrimaryColor"
            app:tabSelectedTextColor="@color/myTextPrimaryColor"
            app:tabTextColor="#EF9A9A"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_height="45dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/dividers" />
        <com.alfaloop.android.alfabridge.ui.view.NonSwipeableViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
